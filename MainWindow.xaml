<Window x:Class="SearchApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Search" Height="520" Width="860">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
            <TextBlock Text="Folder:" VerticalAlignment="Center" Margin="0,0,10,0" />
            <TextBox x:Name="FolderTextBox" Width="420" Margin="0,0,10,0" />
            <Button Content="Browse" Click="OnBrowseClick" />
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,12">
            <TextBlock Text="Query:" VerticalAlignment="Center" Margin="0,0,10,0" />
            <TextBox x:Name="QueryTextBox" Width="320" Margin="0,0,10,0" />
            <Button Content="Search" Click="OnSearchClick" />
        </StackPanel>

        <DataGrid Grid.Row="2" x:Name="ResultsGrid" ItemsSource="{Binding Results}"
                  MouseDoubleClick="OnResultDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="File" Binding="{Binding FileName}" Width="2*" />
                <DataGridTextColumn Header="Path" Binding="{Binding FullPath}" Width="3*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
